<%- include("partials/header") %>


<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome To YelpCamp!</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new"
          >Add Campsite</a
        >
      </p>
     <% if(nomatch.length!==0){ %>
        <p><%=nomatch%></p>
    <%  } %>
      <p>
        <form action="/campgrounds" method="GET" class="form-inline">
          <div class="form-group">
            <input style="margin: 2px;" class="form-control" type="text" name="search" placeholder="Campground search...">
            <input type="submit" value="Search" class="btn btn-light">
          </div>
        </form>
      </p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-md-3 col-sm-6">
      <div class="card">
        <img class="img-fluid" src="<%= campground.image %>" alt="" />
        <div class="caption">
          <h4><%= campground.name %></h4>
        </div>
        <p>
          <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary"
            >More Info</a
          >
        </p>
      </div>
    </div>
    <%})%>
  </div>
</div>

<%- include("partials/footer") %>
