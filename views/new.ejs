<%- include("partials/header") %>

<div class="container">
  <div>
    <h1 style="text-align: center; margin-top: 50px">Create New Campground</h1>
  </div>

  <div style="width: 30%; margin: 25px auto">
    <form action="/campgrounds" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="name"
          placeholder="Enter campsite name"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="location"
          placeholder="Enter campsite location"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="number"
          name="price"
          min="0.0"
          step="0.01"
          placeholder="Price"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="file"
          name="image"
          accept="image/*"
          required
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="description"
          placeholder="Description"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block">Submit</button>
      </div>
    </form>
    <a href="/campgrounds">Go back</a>
  </div>
</div>

<%- include("partials/footer") %>
